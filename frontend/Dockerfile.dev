FROM node:18.19.1

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with legacy peer deps to handle @spartan-ng conflicts
RUN npm install --legacy-peer-deps

# Copy the rest of the frontend code
COPY . .

# Expose port 4200 (Angular default)
EXPOSE 4200

# Start development server with host 0.0.0.0 to allow external access
CMD ["npm", "run", "start", "--", "--host", "0.0.0.0"]
